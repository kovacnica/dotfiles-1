#!/bin/bash
#
# Junegunn Choi (junegunn.c@gmail.com)
# 2011/05/25-

# RC files

cd "$(dirname "${BASH_SOURCE[0]}")" || exit 1

BASE=$(pwd)
touch bashrc-extra
for rc in *rc *profile tmux.conf agignore rubocop.yml; do
  mkdir -pv bak
  [ -e ~/."$rc" ] && mv -v ~/."$rc" bak/."$rc"
  ln -sfv "$BASE/$rc" ~/."$rc"
done

# git-prompt
if [ ! -e ~/.git-prompt.sh ]; then
  curl https://raw.githubusercontent.com/git/git/master/contrib/completion/git-prompt.sh -o ~/.git-prompt.sh
fi

# scripts
mkdir -p ~/bin
for bin in $BASE/bin/*; do
  ln -svf "$bin" ~/bin
done

if [ "$(uname -s)" = 'Darwin' ]; then
  # Homebrew
  [ -z "$(which brew)" ] &&
    ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"

  echo "Updating homebrew"
  brew install \
    ag ripgrep ant cmus coreutils cscope exiftool doxygen liboauth \
    fish git graphviz imagemagick boot-clj sbt \
    maven ranger tree vim wget zsh jq macvim ruby python \
    go highlight reattach-to-user-namespace node npm neovim 
  brew install gnuplot --with-qt@5.7

  # Patched version of tmux
  brew tap waltarix/homebrew-customs
  brew install waltarix/homebrew-customs/tmux

  command -v blsd > /dev/null ||
    (bash <(curl -fL https://raw.githubusercontent.com/junegunn/blsd/master/install) && mv blsd ~/bin)

  # Create
  echo "Creating gems..."
  gem install gem-ctags
  gem ctags

  echo "Installing universal ctags..."
  brew tap universal-ctags/universal-ctags
  brew install --HEAD universal-ctags

  brew cask install xquartz iterm2 spectacle virtualbox virtualbox-extension-pack \
    vagrant mat visualvm spotifree flux flycut keycastr
else
  rm -f ~/.tmux.conf
  grep -v reattach-to-user-namespace tmux.conf > ~/.tmux.conf
fi

git config --global user.email "robi@neyho.com"
git config --global user.name "Robert Gersak"

tmux source-file ~/.tmux.conf

./install-vim
